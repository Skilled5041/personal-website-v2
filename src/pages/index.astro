---
import Layout from "../layouts/Layout.astro";
import Snow from "../components/Snow.svelte";
import {Icon} from "astro-icon/components";
---
<Layout>
    <Snow client:only="svelte"/>
    <main style="position:relative; z-index:0;">
        <!-- Use responsive padding so the layout works across screens -->
        <div class="px-6 sm:px-12 md:px-24 lg:px-36 py-12 md:py-24">
            <div class="flex justify-center">
                <!-- Use a max-width container so content scales down on small screens -->
                <div class="w-full max-w-3xl">
                    <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold text-ctp-mauve">Aaron Ye</h1>
                    <h2 class="pt-2 pb-2 text-base md:text-lg">Mathematics @ UWaterloo</h2>
                    <hr class="border-1">
                    <h1 class="text-xl md:text-2xl lg:text-3xl font-bold pt-12 text-ctp-mauve">About Me</h1>
                    <p class="pt-2 text-sm md:text-base leading-relaxed">
                        Iâ€™m a first-year Math student at the University of Waterloo pursuing software engineering.
                        I have experience building full-stack applications, with a focus on backend systems and clean,
                        scalable design.
                    </p>

                    <h1 class="pt-8 font-bold text-lg md:text-xl">Currently:</h1>
                    <ul class="list-none mt-3 space-y-2">
                        <li class="flex items-start gap-3 pl-0 sm:pl-2">
                            <Icon name="iconamoon--arrow-right-2-bold"
                                  class="w-4 h-4 md:w-5 md:h-5 text-ctp-mauve flex-shrink-0 mt-1"
                                  aria-hidden="true"/>
                            <span class="text-sm md:text-base">Studying Mathematics @ the University of Waterloo</span>
                        </li>
                        <li class="flex items-start gap-3 pl-0 sm:pl-2">
                            <Icon name="iconamoon--arrow-right-2-bold"
                                  class="w-4 h-4 md:w-5 md:h-5 text-ctp-mauve flex-shrink-0 mt-1"
                                  aria-hidden="true"/>
                            <span class="text-sm md:text-base">Learning about machine learning and AI</span>
                        </li>
                        <li class="flex items-start gap-3 pl-0 sm:pl-2">
                            <Icon name="iconamoon--arrow-right-2-bold"
                                  class="w-4 h-4 md:w-5 md:h-5 text-ctp-mauve flex-shrink-0 mt-1"
                                  aria-hidden="true"/>
                            <span class="text-sm md:text-base">Seeking Summer 2026 software engineering internships</span>
                        </li>
                    </ul>

                    <h1 class="pt-8 font-bold text-lg md:text-xl">Previously:</h1>
                    <ul class="list-none mt-3 space-y-2">
                        <li class="flex items-start gap-3 pl-0 sm:pl-2">
                            <Icon name="iconamoon--arrow-right-2-bold"
                                  class="w-4 h-4 md:w-5 md:h-5 text-ctp-mauve flex-shrink-0 mt-1"
                                  aria-hidden="true"/>
                            <span class="text-sm md:text-base">11x hackathon winner</span>
                        </li>
                        <li class="flex items-start gap-3 pl-0 sm:pl-2">
                            <Icon name="iconamoon--arrow-right-2-bold"
                                  class="w-4 h-4 md:w-5 md:h-5 text-ctp-mauve flex-shrink-0 mt-1"
                                  aria-hidden="true"/>
                            <span class="text-sm md:text-base">Organized 3 hackathons</span>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
    </main>
</Layout>
