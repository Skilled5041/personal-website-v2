---
import NavLinks from "./NavLinks.svelte";
import Contacts from "./Contacts.astro";
const currentPath = Astro.url.pathname;
---

<div class="flex justify-center px-6 sm:px-12 md:px-24 lg:px-36 pt-12 md:pt-24">
    <div class="w-full max-w-3xl">
        <div
            class="flex flex-col gap-2 sm:gap-0 items-start pb-2 sm:pb-0 sm:flex-row justify-between sm:items-end"
        >
            <div>
                <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold text-ctp-mauve">Aaron Ye</h1>
                <h2 class="sm:pt-2 pb-2 text-base md:text-lg">Mathematics @ UWaterloo</h2>
            </div>
            <nav class="flex flex-col gap-1.5 sm:gap-3 pb-1 sm:pb-3">
                <NavLinks currentPath={currentPath} client:load />
                <Contacts />
            </nav>
        </div>
        <hr class="border-1 text-ctp-subtext0" />
    </div>
</div>
